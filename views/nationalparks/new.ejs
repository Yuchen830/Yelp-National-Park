<% layout('layouts/boilerplate') %>

<div class="row">
    <h1 class="text-center">Add a New Park </h1>
    <div class="col-md-6 offset-md-3">
        <form action="/nationalparks" method="POST" novalidate class="validated-form" enctype="multipart/form-data">

            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="nationalpark[title]" placeholder="Park Title" required>
            </div >
            
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="nationalpark[location]" placeholder="Location  (E.g. Pittsburgh, PA)" required>
            </div>


            <div class="input-group mb-3">
                <label class="form-label" for="">Upload Images</label>
                <div class="input-group">
                    <input type="file" class="form-control" id="image" name="image" multiple>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="price">National Park Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price" placeholder="Entry per vehicle" aria-label="price"
                        aria-describedby="price-label" name="nationalpark[price]" required>
                </div>
            </div>

            <!-- // new one -->
            <div class="mb-3">
                <label class="form-label" for="location">Contact Info</label>
                <input class="form-control" type="text" id="phone" name="nationalpark[phone]" placeholder="Phone number of the park" >
            </div>
            
            <div class="mb-3">
                <label class="form-label" for="location">Official Website</label>
                <input class="form-control" type="link" id="info" name="nationalpark[info]" placeholder="Link to the park" >
            </div>


            <div class="mb-4">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="nationalpark[description]" placeholder="Description" required> </textarea>
            </div>
    
            <div class="mb-3">
                <button class="btn btn-success">Add Park</button>
            </div>

        </form>
    
    </div>
</div>

